DECLARE
    v_log_message VARCHAR2(100);
BEGIN
    v_log_message := EMP_PACKAGE.EMP_WORK_LOG(1000);  -- Replace 1000 with the employee ID
    DBMS_OUTPUT.PUT_LINE(v_log_message);
END;
/

