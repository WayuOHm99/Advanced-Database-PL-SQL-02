BEGIN
    FOR emp_rec IN (
        SELECT 'ID: ' || employee_id || ', Name: ' || first_name || ' ' || last_name || 
               ', Hire Date: ' || TO_CHAR(hire_date, 'DD-MON-YYYY') || 
               ', Commission: ' || NVL(commission_pct * 100, 0) || '%' AS output
        FROM employees
        WHERE UPPER(SUBSTR(first_name, 1, 1)) BETWEEN 'C' AND 'H'
        ORDER BY first_name || ' ' || last_name
    ) LOOP
        DBMS_OUTPUT.PUT_LINE(emp_rec.output);
    END LOOP;
END;
