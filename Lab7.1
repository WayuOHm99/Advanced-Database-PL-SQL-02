BEGIN
    FOR emp_rec IN (
        SELECT employee_id, first_name || ' ' || last_name AS employee_name, hire_date, 
               NVL(commission_pct * 100, 0) || '%' AS commission_pct
        FROM employees
        WHERE UPPER(SUBSTR(first_name, 1, 1)) BETWEEN 'C' AND 'H'
        ORDER BY employee_name
    ) LOOP
        DBMS_OUTPUT.PUT_LINE('ID: ' || emp_rec.employee_id || 
                             ', Name: ' || emp_rec.employee_name || 
                             ', Hire Date: ' || TO_CHAR(emp_rec.hire_date, 'DD-MON-YYYY') || 
                             ', Commission: ' || emp_rec.commission_pct);
    END LOOP;
END;
